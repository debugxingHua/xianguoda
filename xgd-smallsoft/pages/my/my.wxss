/* pages/order/order.wxss */
/* 登陆前样式 */
.box{
    width: 100%; 
    margin: auto; 
    overflow: hidden;
}
.home_top {
     position: relative; 
     width: 100%; 
     height: 120px; 
     line-height: 50px;
     padding-left: 50rpx;
     padding-top: 50rpx;
     display: flex;
     }
.home_top:after {
     width: 140%;
      height: 120px; 
      position: absolute; 
      left: -20%;
       top: 0; 
       z-index: -1; 
       content: ''; 
       border-radius: 0 0 50% 50%; 
       background: linear-gradient(#10AC8D, #10AC8D);
     }
.home_top image{
    width:150rpx;
    height: 150rpx;
    border-radius: 80rpx;  /* 把图片变圆角 */ 
}
.home_font{
    font-size: 14px;
    padding-left:20rpx;
    height: 100rpx;
}
/* 签到有礼样式 */
.Courtesy{
    margin-top: -40rpx;
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;  /* 垂直居中 */
}
.Courtesy_img{
    margin-left: 30rpx;
}
.Courtesy_img image{
    width:50rpx;
    height: 150rpx;
    border-radius: 10rpx;  /* 把图片变圆角 */ 
}   
.Courtesy_font{
    font-size: 13px;
    margin-left: 40rpx;
    
}   
.Courtesy_font2{
    color: orange;
    margin-top: 10rpx;
}  
.Courtesy_qiandao{
    font-size: 13px;
    margin-left: 30rpx;
}
/* <!--优惠卷的图片 --> */
.img{
    padding-left: 20rpx;
    padding-top: 20rpx;
    width: 700rpx;
    height: 150rpx;
}
/* 优惠卷/鲜豆/礼品卡/收货地址 */
.hr {
    width: 100%;
    height: 15px;
    background-color: #f4f5f6;
  }
  
  .item {
    display: flex;
    flex-direction: row;
  }
  
  .title {
    padding-top: 15px;
    padding-bottom: 15px;
    padding-left: 15px;
    font-size: 13px;
  }
  
  .detail2 {
    font-size: 15px;
    position: absolute;
    right: 20px;
    height: 50px;
    line-height: 50px;
    color: #888;
  }
  
  .line {
    border: 1px solid #ccc;
    opacity: 0.2;
  }