/* pages/order/order.wxss */
/* 登陆前样式 */
.box{
    width: 100%; 
    margin: auto; 
    overflow: hidden;
}
.home_top {
     position: relative; 
     width: 100%; 
     height: 150px; 
     line-height: 50px;
     padding-left: 50rpx;
     padding-top: 50rpx;
     display: flex;
     }
.home_top:after {
     width: 140%;
      height: 150px; 
      position: absolute; 
      left: -20%;
       top: 0; 
       z-index: -1; 
       content: ''; 
       border-radius: 0 0 50% 50%; 
       background: linear-gradient(#10AC8D, #10AC8D);
     }
.home_top image{
    width:150rpx;
    height: 150rpx;
    border-radius: 80rpx;  /* 把图片变圆角 */ 
}
.home_font{
    font-size: 14px;
    padding-left:20rpx;
    height: 100rpx;
}